# change window focus within space
shift + alt + ctrl + cmd - j : yabai -m window --focus south
shift + alt + ctrl + cmd - k : yabai -m window --focus north
shift + alt + ctrl + cmd - h : yabai -m window --focus west
shift + alt + ctrl + cmd - l : yabai -m window --focus east

#change focus between external displays (left and right)
shift + alt + ctrl + cmd - s: yabai -m display --focus west
shift + alt + ctrl + cmd - d: yabai -m display --focus east

# rotate layout clockwise
# shift + alt - r : yabai -m space --rotate 270
# flip along y-axis
# shift + alt - y : yabai -m space --mirror y-axis
# flip along x-axis
# shift + alt - x : yabai -m space --mirror x-axis
# toggle window float
shift + alt + ctrl + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
# shift + alt - m : yabai -m window --toggle zoom-fullscreen

# swap windows
ctrl + shift + alt - j : yabai -m window --swap south
ctrl + shift + alt - k : yabai -m window --swap north
ctrl + shift + alt - h : yabai -m window --swap west
ctrl + shift + alt - l : yabai -m window --swap east

# move window to display left and right
# shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
# shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# move window to space #
shift + alt + ctrl + cmd - 1 : yabai -m window --space 1;
shift + alt + ctrl + cmd - 2 : yabai -m window --space 2;
shift + alt + ctrl + cmd - 3 : yabai -m window --space 3;
shift + alt + ctrl + cmd - 4 : yabai -m window --space 4;
shift + alt + ctrl + cmd - 5 : yabai -m window --space 5;
shift + alt + ctrl + cmd - 6 : yabai -m window --space 6;
shift + alt + ctrl + cmd - 7 : yabai -m window --space 7;


